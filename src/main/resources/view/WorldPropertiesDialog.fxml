<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox id="root" prefWidth="350" stylesheets="@EditObjectDialog.css" xmlns="http://javafx.com/javafx/10.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="wapuniverse.view.EditObjectDialogController">
    <TitledPane animated="false" text="Info">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="70.0" minWidth="70.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="128.0"/>
            </columnConstraints>
            <Label text="Name:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"/>
            <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="0"/>
            <Label text="Author:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
            <TextField fx:id="authorTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="1"/>
            <Label text="Logic:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
            <TextField fx:id="logicTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="2"/>
            <Label text="Image Set:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
            <TextField fx:id="imageSetTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Animation:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
            <TextField fx:id="animationTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </GridPane>
    </TitledPane>
    <TitledPane animated="false" text="Resources">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="70.0" minWidth="70.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="128.0"/>
            </columnConstraints>
            <Label text="Rez File:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"/>
            <TextField fx:id="rezFileTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="0"/>
            <Label text="Image Dir:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
            <TextField fx:id="imageDirTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="1"/>
            <Label text="Pal Rez:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
            <TextField fx:id="palRezTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="2"/>
        </GridPane>
    </TitledPane>
    <TitledPane animated="false" text="Position">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="70.0" minWidth="70.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="128.0"/>
            </columnConstraints>
            <Label text="Start X:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"/>
            <TextField fx:id="startXTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="0"/>
            <Label text="Start Y:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
            <TextField fx:id="startYTextField" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="1"/>
        </GridPane>
    </TitledPane>
    <HBox>
        <Button fx:id="saveButton" text="Save"/>
    </HBox>
</VBox>
